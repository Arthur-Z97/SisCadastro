<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaListagemUsuarios">

    <LinearLayout
        android:id="@+id/line3"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="@color/teal_200"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:src="@drawable/cadastro" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:text="Cadastro De Usuário"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="40dp"
        android:layout_weight="30"
        android:text="Registros: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtnome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtstatus"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_weight="30"
        android:text="Nome: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/ednome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnome"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_weight="30"
        android:text="NOME AQUI"
        android:textColor="@color/red"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtendereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ednome"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_weight="30"
        android:text="Endereço: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edendereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtendereco"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_weight="30"
        android:text="ENDEREÇO AQUI"
        android:textColor="@color/red"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txttelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edendereco"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_weight="30"
        android:text="Telefone: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txttelefone"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_weight="30"
        android:text="TELEFONE AQUI"
        android:textColor="@color/red"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btanterior"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtelefone"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="230dp"
        android:text="Anterior" />

    <Button
        android:id="@+id/btproximo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtelefone"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:text="Próximo" />

    <Button
        android:id="@+id/btfechar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btanterior"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="125dp"
        android:text="Fechar"
        android:gravity="center"/>

</RelativeLayout>